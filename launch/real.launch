<!-- real.launch -->

<launch>
  <arg name="dynamics_model" default="unicycle_dynamics" />

  <arg name="mocab_address" default="" />
  <arg name="robot1_tag"    default="" />
  <arg name="robot2_tag"    default="" />
  <arg name="robot3_tag"    default="" />
  <arg name="robot4_tag"    default="" />

  <include file="$(find multi_topology_demo)/launch/architecture.launch" />

  <node pkg="vrpn_client_ros" type="vrpn_client_node" name="vrpn_client_node" output="screen" >
    <rosparam subst_value="true">
      server: $(arg mocab_address)
      port: 3883

      update_frequency: 100
      trackers:
        - $(arg robot1_tag)
        - $(arg robot2_tag)
        - $(arg robot3_tag)
        - $(arg robot4_tag)
    </rosparam>
  </node>

  <include file="$(find multi_topology_demo)/launch/robot_setup.launch" ns="$(arg robot1_tag)" >
    <arg name="namespace"         value="$(arg robot1_tag)"        />
    <arg name="start_nodes_topic" value="$(arg start_nodes_topic)" />
    <arg name="end_nodes_topic"   value="$(arg end_nodes_topic)"   />
    <arg name="x_pos"             value="1.0"                      />
    <arg name="y_pos"             value="0.0"                      />
    <arg name="yaw"               value="1.0"                      />
    <arg name="address"           value="$(arg robot1_tag)"        />
  </include>

  <include file="$(find multi_topology_demo)/launch/robot_setup.launch" ns="$(arg robot2_tag)" >
    <arg name="namespace"         value="$(arg robot2_tag)"        />
    <arg name="start_nodes_topic" value="$(arg start_nodes_topic)" />
    <arg name="end_nodes_topic"   value="$(arg end_nodes_topic)"   />
    <arg name="x_pos"             value="0.0"                      />
    <arg name="y_pos"             value="1.0"                      />
    <arg name="yaw"               value="1.5"                      />
    <arg name="address"           value="$(arg robot2_tag)"        />
  </include>

  <include file="$(find multi_topology_demo)/launch/robot_setup.launch" ns="$(arg robot3_tag)" >
    <arg name="namespace"         value="$(arg robot3_tag)"        />
    <arg name="start_nodes_topic" value="$(arg start_nodes_topic)" />
    <arg name="end_nodes_topic"   value="$(arg end_nodes_topic)"   />
    <arg name="x_pos"             value="-1.0"                     />
    <arg name="y_pos"             value="0.0"                      />
    <arg name="yaw"               value="0.0"                      />
    <arg name="address"           value="$(arg robot3_tag)"        />
  </include>

  <include file="$(find multi_topology_demo)/launch/robot_setup.launch" ns="$(arg robot4_tag)" >
    <arg name="namespace"         value="$(arg robot4_tag)"        />
    <arg name="start_nodes_topic" value="$(arg start_nodes_topic)" />
    <arg name="end_nodes_topic"   value="$(arg end_nodes_topic)"   />
    <arg name="x_pos"             value="0.0"                      />
    <arg name="y_pos"             value="-1.0"                     />
    <arg name="yaw"               value="0.5"                      />
    <arg name="dynamics_model"    value="$(arg dynamics_model)"    />
    <arg name="address"           value="$(arg robot4_tag)"        />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find turtlebot_launch)/rviz/Turtlebot_multi.rviz"/>

  <node name="topology_graph" pkg="go2goal" type="topology_goal_generator" output="screen" />
</launch>
